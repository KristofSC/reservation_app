{% block breadcrumb %}

        {% for arrays in breadcrumbs %}
            {% for url, title in arrays %}
                <a href="{{ url }}" class="btn btn-info" role="button">{{ title }}</a>
            {% endfor %}
        {% endfor %}

{% endblock %}

{% block search_box %}
            <form action="{{ 'code-result' }}" method="POST">
             <div class="form-group row">
                 <div class="col-sm-4 col-xs-12 pull-right ">
                     <input required="required" placeholder="Foglalási kód" type="text" class="form-control" id="searchBox" name="searchInput">
                     <button type="submit" class="btn btn-info pull-right col-sm-4 col-xs-12">Keress!</button>
                 </div>
             </div>
             </form>
{% endblock %}

